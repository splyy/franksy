        }
        .badge {
            display: inline-block;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-left: 0.5rem;
        }
        .links {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin: 1.5rem 0;
        }
        .link-card {
            background: white;
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            padding: 1rem;
            text-align: center;
            text-decoration: none;
            color: #2d3748;
            transition: all 0.2s;
        }
        .link-card:hover {
            border-color: #667eea;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.2);
        }
        .link-card .emoji {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }
        .code-block {
            background: #2d3748;
            color: #a0aec0;
            border-radius: 10px;
            padding: 1.5rem;
            overflow-x: auto;
            font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
            font-size: 0.9rem;
            line-height: 1.6;
            white-space: pre;
        }
        .code-block .command {
            color: #48bb78;
        }
        .code-block .comment {
            color: #718096;
        }
        @media (max-width: 768px) {
            .header h1 { font-size: 1.8rem; }
            .content { padding: 1.5rem; }
        }
    </style>
